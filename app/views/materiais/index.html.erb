<p id="notice"><%= notice %></p>

<h1>Materiais</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materiais.each do |material| %>
      <tr>
        <td><%= material.nome %></td>
        <td><%= link_to 'Exibir', material %></td>
        <td><%= link_to 'Editar', edit_material_path(material) %></td>
        <td><%= link_to 'Excluir', material, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este material?' } unless material.registros.any? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Material', new_material_path %> - 
<%= link_to 'Voltar', root_path%>
